
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
  </head>
  
<body>
  <h1>Books</h1>

  
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody>
       <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <%= link_to "Show", show_book_path(@book.id) %>
        </td>
        <td>
        <%= link_to "Edit", edit_book_path(@book.id) %>
        </td>
        <td><a data-confirm="Are you sure?" class="destroy_14660" rel="nofollow" data-method="delete" href="/books">Destroy</a>
        </td>
        </tr>
        <% end %>
    </tbody>
  </table>
  
  <h2>New book</h2>
  
<!-- form_with部分 -->
<%= form_with model: @book, url:'/books', local:true do |f| %>

  <h4>title</h4>
  <%= f.text_field :Title %>

  <h4>body</h4>
  <%= f.text_area :Body %>

  <%= f.submit 'Create Book' %>

<% end %>
  
</body>

</html>